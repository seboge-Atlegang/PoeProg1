<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contract Monthly Claim System (CMCS)</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="flex flex-col min-h-screen bg-gray-100 text-gray-800">
    <main id="app" class="flex-grow flex items-center justify-center p-4">
    </main>

    <script>
        // State management for the prototype. This is non-functional and in-memory.
        let currentUserRole = null; // 'lecturer', 'admin', or null
        let currentPage = 'login'; // 'login', 'lecturerDashboard', 'adminDashboard'
        let currentClaimFormState = 'dashboard'; // 'dashboard' or 'form'
        let totalClaim = 0; // New state variable to track total claim

        /**
         * Renders the user interface based on the current page and user role.
         */
        function renderUI() {
            const appDiv = document.getElementById('app');
            appDiv.innerHTML = ''; // Clear previous content

            if (currentPage === 'login') {
                appDiv.innerHTML = `
                    <div class="bg-white p-8 rounded-2xl shadow-lg w-full max-w-md text-center">
                        <h1 class="text-3xl font-bold mb-6 text-gray-700">CMCS Login</h1>
                        <p class="text-gray-600 mb-8">Select your role to view the prototype dashboard.</p>
                        <div class="space-y-4">
                            <button onclick="login('lecturer')" class="w-full bg-pink-600 text-white font-semibold py-3 px-6 rounded-xl hover:bg-pink-700 transition-colors duration-300 transform hover:scale-105 shadow-md">
                                Login as Lecturer
                            </button>
                            <button onclick="login('admin')" class="w-full bg-pink-400 text-white font-semibold py-3 px-6 rounded-xl hover:bg-pink-500 transition-colors duration-300 transform hover:scale-105 shadow-md">
                                Login as Admin
                            </button>
                        </div>
                    </div>
                `;
            } else if (currentPage === 'lecturerDashboard' && currentUserRole === 'lecturer') {
                if (currentClaimFormState === 'form') {
                    // Show claim submission form
                    appDiv.innerHTML = `
                        <div class="bg-white p-8 rounded-2xl shadow-lg w-full max-w-xl">
                            <div class="flex justify-between items-center mb-6">
                                <h1 class="text-3xl font-bold text-blue-700">Submit New Claim</h1>
                                <button onclick="cancelClaimForm()" class="bg-gray-200 text-gray-700 py-2 px-4 rounded-xl hover:bg-gray-300 transition-colors duration-300">
                                    Cancel
                                </button>
                            </div>
                            <form onsubmit="event.preventDefault(); submitClaim();" class="space-y-6">
                                <div>
                                    <label for="claimTitle" class="block text-lg font-medium text-gray-700">Claim Title</label>
                                    <input type="text" id="claimTitle" name="claimTitle" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm p-3" placeholder="e.g., September 2025 Pay Claim" required>
                                </div>
                                <div>
                                    <label for="claimDescription" class="block text-lg font-medium text-gray-700">Claim Description</label>
                                    <textarea id="claimDescription" name="claimDescription" rows="5" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm p-3" placeholder="Provide a brief description of your claim." required></textarea>
                                </div>
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <div>
                                        <label for="hourlyRate" class="block text-lg font-medium text-gray-700">Hourly Rate</label>
                                        <input type="number" id="hourlyRate" name="hourlyRate" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm p-3" placeholder="e.g., 150" required>
                                    </div>
                                    <div>
                                        <label for="hoursWorked" class="block text-lg font-medium text-gray-700">Hours Worked</label>
                                        <input type="number" id="hoursWorked" name="hoursWorked" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm p-3" placeholder="e.g., 40" required>
                                    </div>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="w-full bg-blue-600 text-white font-semibold py-3 px-6 rounded-xl hover:bg-blue-700 transition-colors duration-300 shadow-md">
                                        Submit Claim
                                    </button>
                                </div>
                            </form>
                        </div>
                    `;
                } else {
                    // Show main lecturer dashboard
                    appDiv.innerHTML = `
                        <div class="bg-white p-8 rounded-2xl shadow-lg w-full max-w-4xl">
                            <div class="flex justify-between items-center mb-6">
                                <h1 class="text-3xl font-bold text-blue-700">Lecturer Dashboard</h1>
                                <button onclick="logout()" class="bg-pink-200 text-pink-700 py-2 px-4 rounded-xl hover:bg-pink-300 transition-colors duration-300">
                                    Logout
                                </button>
                            </div>
                            <p class="text-gray-600 mb-8">Welcome! Here you can manage your monthly claims.</p>

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                                <div class="bg-blue-50 p-6 rounded-2xl shadow-sm">
                                    <h2 class="text-xl font-semibold mb-4 text-blue-600">Claim Submission</h2>
                                    <p class="text-gray-700 mb-4">Click the button below to submit your monthly claim.</p>
                                    <button onclick="showClaimForm()" class="w-full bg-blue-600 text-white font-semibold py-3 px-6 rounded-xl hover:bg-blue-700 transition-colors duration-300 shadow-md">
                                        Submit Monthly Claim
                                    </button>
                                </div>

                                <div class="bg-blue-200 p-6 rounded-2xl shadow-sm">
                                    <h2 class="text-xl font-semibold mb-4 text-blue-700">Upload Documents</h2>
                                    <p class="text-gray-700 mb-4">Upload supporting documents for your claim. This is a non-functional interface.</p>
                                    <div class="border-2 border-dashed border-blue-400 rounded-xl p-6 text-center text-gray-500">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
                                        </svg>
                                        <p class="mt-2">Drag and drop files here, or click to browse</p>
                                    </div>
                                </div>
                            </div>
                             <div class="bg-gray-50 p-6 rounded-2xl shadow-sm mt-8">
                                <h2 class="text-xl font-semibold mb-4 text-gray-700">Claim Tracking</h2>
                                <div class="flex flex-col md:flex-row justify-between items-center mb-4">
                                    <div class="text-2xl font-bold text-gray-800">
                                        Total Claim: <span class="text-blue-600">R${totalClaim.toFixed(2)}</span>
                                    </div>
                                    <div class="text-md text-gray-500 mt-2 md:mt-0">
                                        Status: <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                            Pending
                                        </span>
                                    </div>
                                </div>
                                <p class="text-gray-600 mb-4">You can track the progress of your submitted claims here.</p>
                            </div>
                        </div>
                    `;
                }
            } else if (currentPage === 'adminDashboard' && currentUserRole === 'admin') {
                appDiv.innerHTML = `
                    <div class="bg-white p-8 rounded-2xl shadow-lg w-full max-w-5xl">
                        <div class="flex justify-between items-center mb-6">
                            <h1 class="text-3xl font-bold text-purple-700">Administrator Dashboard</h1>
                            <button onclick="logout()" class="bg-pink-200 text-pink-700 py-2 px-4 rounded-xl hover:bg-pink-300 transition-colors duration-300">
                                Logout
                            </button>
                        </div>
                        <p class="text-gray-600 mb-8">Welcome! Here you can verify and approve submitted claims.</p>

                        <div class="bg-purple-50 p-6 rounded-2xl shadow-sm">
                            <h2 class="text-xl font-semibold mb-4 text-purple-600">Claims to be Processed</h2>
                            <p class="text-gray-700 mb-4">A list of pending claims from lecturers. Actions are not functional in the prototype.</p>
                            <div class="overflow-x-auto">
                                <table class="min-w-full divide-y divide-gray-200">
                                    <thead class="bg-gray-100">
                                        <tr>
                                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Claim ID</th>
                                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Lecturer</th>
                                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date Submitted</th>
                                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody class="bg-white divide-y divide-gray-200">
                                        <tr class="hover:bg-gray-50">
                                            <td class="px-6 py-4 whitespace-nowrap">#987654323</td>
                                            <td class="px-6 py-4 whitespace-nowrap">Kamo Smith</td>
                                            <td class="px-6 py-4 whitespace-nowrap">2025-09-19</td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                                    Pending
                                                </span>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap space-x-2">
                                                <button class="bg-green-500 text-white py-1 px-3 rounded-xl hover:bg-green-600 transition-colors duration-300">Approve</button>
                                                <button class="bg-red-500 text-white py-1 px-3 rounded-xl hover:bg-red-600 transition-colors duration-300">Decline</button>
                                            </td>
                                        </tr>
                                        <tr class="hover:bg-gray-50">
                                            <td class="px-6 py-4 whitespace-nowrap">#987654324</td>
                                            <td class="px-6 py-4 whitespace-nowrap">Calvin Klien</td>
                                            <td class="px-6 py-4 whitespace-nowrap">2025-09-07</td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                                    Pending
                                                </span>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap space-x-2">
                                                <button class="bg-green-500 text-white py-1 px-3 rounded-xl hover:bg-green-600 transition-colors duration-300">Approve</button>
                                                <button class="bg-red-500 text-white py-1 px-3 rounded-xl hover:bg-red-600 transition-colors duration-300">Decline</button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                `;
            }
        }

        function login(role) {
            currentUserRole = role;
            currentPage = role === 'lecturer' ? 'lecturerDashboard' : 'adminDashboard';
            currentClaimFormState = 'dashboard'; // Reset state on login
            totalClaim = 0; // Reset total claim on new login
            renderUI();
        }

        /**
         * Simulates logging out and returns to the login page.
         */
        function logout() {
            currentUserRole = null;
            currentPage = 'login';
            currentClaimFormState = 'dashboard'; // Reset state on logout
            totalClaim = 0; // Reset total claim on logout
            renderUI();
        }

        /**
         * Transitions to the claim submission form view.
         */
        function showClaimForm() {
            currentClaimFormState = 'form';
            renderUI();
        }

        /**
         * Simulates a form submission by showing an alert, calculating the claim, and returning to the dashboard.
         */
        function submitClaim() {
            const hourlyRate = parseFloat(document.getElementById('hourlyRate').value);
            const hoursWorked = parseFloat(document.getElementById('hoursWorked').value);
            totalClaim = hourlyRate * hoursWorked;

            alert('Functionality is not yet ready. Your claim has been saved to the tracking dashboard.');
            currentClaimFormState = 'dashboard';
            renderUI();
        }

        /**
         * Cancels the form and returns to the lecturer dashboard.
         */
        function cancelClaimForm() {
            currentClaimFormState = 'dashboard';
            renderUI();
        }

        // Initial render on page load
        document.addEventListener('DOMContentLoaded', renderUI);
    </script>
</body>
</html>