@model IEnumerable<ProgPoe.Models.MonthlyClaim>
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="bg-white p-8 rounded-2xl shadow-lg w-full max-w-5xl mx-auto">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-purple-700">Administrator Dashboard</h1>
        <a asp-controller="Account" asp-action="Logout"
           class="bg-pink-200 text-pink-700 py-2 px-4 rounded-xl hover:bg-pink-300 transition-colors duration-300">
            Logout
        </a>
    </div>

    <p class="text-gray-600 mb-8">Here you can verify and approve submitted claims.</p>

    <div class="bg-purple-50 p-6 rounded-2xl shadow-sm">
        <h2 class="text-xl font-semibold mb-4 text-purple-600">Claims to be Processed</h2>

        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Claim ID</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Lecturer ID</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date Submitted</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var claim in Model.Where(c => c.Status == "Pending"))
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap">#@claim.ClaimId</td>
                            <td class="px-6 py-4 whitespace-nowrap">@claim.LecturerId</td>
                            <td class="px-6 py-4 whitespace-nowrap">@claim.DateSubmitted.ToString("yyyy-MM-dd")</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                    Pending
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap space-x-2">
                                <a asp-action="Approve" asp-route-id="@claim.ClaimId"
                                   class="bg-green-500 text-white py-1 px-3 rounded-xl hover:bg-green-600">Approve</a>
                                <a asp-action="Decline" asp-route-id="@claim.ClaimId"
                                   class="bg-red-500 text-white py-1 px-3 rounded-xl hover:bg-red-600">Decline</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
